{
  "appId": "com.aiftt.electron-dbm",
  "productName": "Electron DBM",
  "directories": {
    "output": "out"
  },
  "files": ["dist/**/*", "dist-electron/**/*"],
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": ["dmg", "zip"]
  },
  "win": {
    "target": ["nsis", "portable"]
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Development"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
